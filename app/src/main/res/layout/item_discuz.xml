<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#9F9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:id="@+id/iv_discuz_item_imageTitle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_discuz_item_imageTitle"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Title Here"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:lines="1"
        android:textColor="#000"
        android:id="@+id/tv_discuz_item_textTitle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_discuz_item_textTitle"
        app:layout_constraintLeft_toRightOf="@id/iv_discuz_item_imageTitle"
        android:text="Content Here"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_discuz_item_imageTitle"
        android:textSize="10sp"
        android:id="@+id/tv_discuz_item_content"
        />



</androidx.constraintlayout.widget.ConstraintLayout>